<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="base-background"
            stylesheets="@css/components.css, @css/base.css" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zascapay.client.controller.CartOverviewController">
    <top>
        <BorderPane prefHeight="82.0" prefWidth="800.0">
            <!-- Label căn giữa -->
            <center>
                <Label text="Danh sách đồ"
                       styleClass="header-label"
                       maxWidth="Infinity"
                       graphicTextGap="0"
                       alignment="CENTER"
                       BorderPane.alignment="CENTER"/>
            </center>

            <!-- Nút bên phải -->
            <right>
                <Button fx:id="helpButton"
                        onAction="#onHelpAction"
                        prefHeight="64"
                        prefWidth="64"
                        styleClass="img-btn"
                        BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets right="16.0"/>
                    </BorderPane.margin>
                </Button>
            </right>
        </BorderPane>
    </top>
    <bottom>
        <BorderPane prefHeight="100.0" prefWidth="811.0" BorderPane.alignment="CENTER">
            <right>
                <Button fx:id="continueButton" mnemonicParsing="false" onAction="#onContinueAction" prefHeight="64.0"
                        prefWidth="128.0" styleClass="continue-btn" text="Tiếp tục" BorderPane.alignment="CENTER"/>
            </right>
            <left>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackAction" prefHeight="64.0"
                        prefWidth="128.0" styleClass="back-btn" text="Quay lại" BorderPane.alignment="CENTER"/>
            </left>
            <padding>
                <Insets left="64.0" right="64.0"/>
            </padding>
        </BorderPane>
    </bottom>
    <center>
        <VBox prefHeight="191.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <ListView prefHeight="0.0" prefWidth="1280.0"/>
            <VBox alignment="CENTER_RIGHT" prefWidth="665.0" spacing="10">
                <!-- Items list -->

                <ListView fx:id="itemList" prefHeight="528.0" prefWidth="672.0" styleClass="item-list"
                          xmlns:fx="http://javafx.com/fxml">
                </ListView>
                <!-- Total box -->
                <VBox alignment="CENTER" prefHeight="98.0" prefWidth="653.0" styleClass="total-box">
                    <Region prefHeight="7.0" prefWidth="250.0" styleClass="total-header" VBox.vgrow="ALWAYS"/>
                    <HBox alignment="CENTER_LEFT" prefHeight="77.0" prefWidth="1280.0" styleClass="total-summary">
                        <Label fx:id="summaryItems" alignment="CENTER" prefHeight="18.0" prefWidth="67.0" text="Total"
                               textAlignment="CENTER">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                        <Region prefHeight="78.0" HBox.hgrow="ALWAYS"/>
                        <Label fx:id="totalLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0"
                               prefWidth="79.0" text="0"/>
                    </HBox>
                    <VBox.margin>
                        <Insets left="9.0" right="10.0"/>
                    </VBox.margin>
                </VBox>
            </VBox>
            <BorderPane.margin>
                <Insets left="64.0" right="64.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
